.homeWrap {
  width: calc(100vw - 300px);
  margin: 0 auto;

  .title {
    text-align: center;
    margin: 0;
    margin-top: 20px;
  }

  .subTitle {
    text-align: center;
    margin-bottom: 20px;
  }

  .rankWrap {
    list-style: none;
  }

  .selectWrap {
    width: 30%;
  }

  .rankWrap {
    // max-height: 800px;
    // overflow: scroll;
    padding: 0;

    .item {
      padding: 16px;
      list-style-type: none;
      border: 1px solid #e1e4e8;
      display: flex;
      cursor: pointer;

      .name {
        color: #0366d6;
        font-weight: bold;
        margin-left: 20px;

        .nameicon {
          color: #586069;
          margin-right: 10px;
          font-weight: normal;
        }

        .accountName {
          color: #586069;
        }
      }

      .desc {
        font-size: 12px;
        color: #586069;
        margin: 5px 0;
      }
    }

    .headImg {
      width: 48px;
      height: 48px;
      border-radius: 50%;
    }
  }

  .reposRankWrap {
    .item {
      display: block;

      .name {
        margin-left: 0;
      }
    }

    .langImg {
      width: 12px;
      height: 12px;
      background-color: #3572a5;
      display: inline-block;
      border-radius: 50%;
    }

    .infoItem {
      margin-right: 10px;
    }
  }

  .typeWrap {
    display: flex;
    justify-content: space-between;
    padding: 16px;
    margin: -1px -1px 0;
    background-color: #f6f8fa;
    border: 1px solid #e1e4e8;
    border-top-left-radius: 6px;
    border-top-right-radius: 6px;
    align-items: center;
    text-align: right;

    button {
      width: 100px;
      height: 32px;
      padding: 0;
    }

    button:first-child {
      border-top-left-radius: 6px;
      border-bottom-left-radius: 6px;
    }

    button:last-child {
      border-top-right-radius: 6px;
      border-bottom-right-radius: 6px;
    }

    .active {
      background: #0366d6;
      color: #fff;
    }
  }
}

@media screen and (max-width: 1080px) {
  .homeWrap {
    width: 100%;
  }
}
